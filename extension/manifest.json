{
  "manifest_version": 2,
  "name": "Better Tele-Task",
  "version": "0.8.1",

  "description": "Adds useful features like subtitles to HPI Tele-Task.",

  "homepage_url": "https://github.com/C0NZZ/better-teletask",

  "icons": {
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png"
  },

  "permissions": [
    "https://btt.makeruniverse.de/*",
    "activeTab",
    "storage"
  ],

  "browser_action": {
    "default_icon": "icons/32.png",
    "default_title": "Better Tele-Task",
    "default_popup": "popup/index.html"
  },

  "content_scripts": [
    {
      "matches": ["https://www.tele-task.de/lecture/video/*"],
      "js": ["browser-polyfill.min.js", "main.js", "subtitles.js"]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "{dc4e1e72-761b-420d-ba9b-d6e69fb18d86}",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["authenticationInfo"]
      },
      "update_url": "https://raw.githubusercontent.com/C0NZZ/better-teletask/main/extension/manifest.json"
    },
    "gecko_android": {
      "strict_min_version": "142.0"
    }
  }
}